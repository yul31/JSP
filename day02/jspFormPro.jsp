<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
</head>
<style>
	table {background:black;}
	th,td {background:white; cellspacing:1px;}
</style>
<body>
<h3>데이터 처리 결과</h3>
<%
	//데이터 가져오기, 한글포함될 경우 인코딩 방식 지정
	request.setCharacterEncoding("utf-8");

	String name=request.getParameter("name");
	String age=request.getParameter("age");
	String gender=request.getParameter("gender");
	String[] foods=request.getParameterValues("food");
	String[] subjects=request.getParameterValues("subject");
	String[] subjectV={"웹프로그램","네트워크관리","보안","게임프로그램","데이터분석"};
%>
<fieldset>
<legend>사용자 정보</legend>
<table>
<tr><th>이름</th><th>나이</th><th>성별</th><th>좋아하는 음식</th><th>관심분야</th></tr>
<tr><td><%=name %></td><td><%=age %></td><td><%=gender %></td>
<td>
<%
	for(int i=0; i<foods.length; i++){	
%>
		<%=foods[i] %><br>
<% } %>
</td>
<td>
<%
	for(int i=0; i<subjects.length; i++){
		int index=Integer.parseInt(subjects[i]);
		out.print(subjectV[index-1]);
		if(i<(subjects.length-1)){//index<(subjects.length)로 써도 같은 값 출력
			out.print("<br>");
		}
	}
%>
</td>
</tr>
</table>
</fieldset>
</body>
</html>